<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:background="@mipmap/ic_price_select_bg_01"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:background="@mipmap/ic_jjsk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前仅剩8个限时优惠名额"
                android:gravity="center|left"
                android:textColor="@color/text_333333"
                android:textStyle="bold"
                android:textSize="16sp"/>
        </FrameLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="160dp"
            android:text="当前限时特惠中，现在支付解锁查看家人|朋友实时位置"
            android:gravity="center"
            />
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_height="@dimen/x36"
            android:orientation="horizontal">
            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/btn_dis"
                android:layout_width="80dp"
                android:layout_weight="1"
                app:qmui_backgroundColor="@drawable/btn_bbb_select"
                android:text="离开"
                android:gravity="center"
                app:qmui_radius="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                app:qmui_borderWidth="1px"
                android:textColor="@color/text_333333"
                app:qmui_isRadiusAdjustBounds="true"
                android:layout_gravity="center_horizontal"
                android:layout_height="@dimen/x36"/>
            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/btn_ok"
                android:layout_width="80dp"
                android:layout_weight="1"
                android:text="去开通"
                android:gravity="center"
                app:qmui_radius="5dp"
                app:qmui_isRadiusAdjustBounds="true"
                app:qmui_backgroundColor="@drawable/btn_ccc_select"
                android:layout_marginRight="10dp"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                app:qmui_borderWidth="1px"
                android:layout_gravity="center_horizontal"
                android:layout_height="@dimen/x36"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </LinearLayout>
</androidx.cardview.widget.CardView>