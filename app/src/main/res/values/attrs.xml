<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="indexBarTextSize" format="dimension" />

    <declare-styleable name="IndexBar">
        <attr name="indexBarTextSize" />
        <attr name="indexBarPressBackground" format="color" />
    </declare-styleable>

    <attr name="valueType" format="enum">
        <enum name="intType" value="0"/>
        <enum name="stringType" value="1"/>
        <enum name="doubleType" value="2" />
    </attr>

    <declare-styleable name="ScrollText">
        <attr name="clickEnable" format="boolean" />
        <attr name="isHorizontal" format="boolean" />
        <attr name="speed" format="integer" />
        <attr name="text" format="string" />
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="times" format="integer" />
    </declare-styleable>

    <declare-styleable name="FlowTagView">
        <attr name="lineSpacing" format="dimension" />
        <attr name="tagSpacing" format="dimension" />
        <!-- 是否是固定布局 -->
        <attr name="isFixed" format="boolean" />
        <attr name="columnSize" format="integer" />
    </declare-styleable>

    <!--圆弧进度条-->
    <declare-styleable name="TasksCompletedView">
        <attr name="radius" format="dimension"/>
        <attr name="strokeWidth" format="dimension"/>
        <attr name="mProgress" format="integer"/>
        <attr name="circleColor" format="color"/>
        <attr name="ringColor" format="color"/>
        <attr name="ringBgColor" format="color"/>
        <attr name="scoreColor" format="color"/>
        <attr name="unitColor" format="color"/>

    </declare-styleable>

    <declare-styleable name="SingleEditText">
        <attr name="iconPadding" format="dimension" />
        <attr name="headIcon" format="reference" />
        <attr name="hint" format="string"/>
        <attr name="isClearText" format="boolean" />
    </declare-styleable>

    <declare-styleable name="DatePickerLayout">
        <attr name="format" format="string"/>
        <attr name="returnType" format="enum">
            <enum name="date" value="0"/>
            <enum name="longDate" value="1"/>
            <enum name="formatDate" value="2"/>
            <enum name="stringDate" value="3"/>
        </attr>
        <attr name="selectionType" format="flags">
            <flag name="all" value="31"/>
            <flag name="year" value="1"/>
            <flag name="month" value="2" />
            <flag name="day" value="4" />
            <flag name="hour" value="8" />
            <flag name="minute" value="16" />
        </attr>
    </declare-styleable>

    <declare-styleable name="MultipleFileView">
        <attr name="uploadSetting" format="enum">
            <enum name="normal" value="0"/>
            <enum name="autoUpload" value="1"/>
            <enum name="multipleThread" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="LocalSelectionView">
        <attr name="valueType"/>
        <attr name="addressGetter" format="reference"/>
    </declare-styleable>

    <declare-styleable name="RadiusImageView">
        <attr name="radiusValue" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CusFlowLayout">
        <attr name="lineSpacing"/>
        <attr name="itemSpacing"/>
        <attr name="maxLine" format="integer"/>
    </declare-styleable>

    <declare-styleable name="FlowRadioGroup">
        <attr name="lineSpacing"/>
        <attr name="itemSpacing"/>
    </declare-styleable>

    <declare-styleable name="CheckBoxGroup">
        <attr name="groupIsList" format="boolean"/>
    </declare-styleable>

</resources>